<div class="container">
    <div class="top_container">

        <div class="category">
            <p>Blogs:</p>
            <a href="/get_pdCatelory">ALL</a>
            <% categorys.forEach(category => { %>
                <a href="/get_pdCatelory/<%= category._id %>"><%= category.name %></a>
            <% }) %>
        </div>
        
        

        <div class="search">
            <form action="/search" style="all: unset;" method="get">
                <input type="text" name="search" placeholder="Search..." required class="search-input" >
                <button type="submit" class="search-button">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="bottom_container">
        <% posts.forEach(post => { %>
            <div class="blog">
                <a href="/get_pddetail/<%= post._id %>" style="text-decoration: none; color: black;" >
                    <div class="container_img">
                        <img src="/images/<%= post.imageURL %>" alt="">
                    </div>
                    <div class="blog_content">
                        <h1><%= post.title %></h1>
                        <p><%= post.body.length > 100 ? post.body.slice(0, 100) + '...' : post.body %></p>

                        <div class="blog_content_bottom">
                            <div class="catelory">
                                <i class="fa-solid fa-list"></i>
                                <p>
                                    <%= categorys.find(category => category.id === post.category)?.name ?? 'Không xác định' %>
                                </p>
                                </div>

                            <div class="time_post_update">
                                <div class="time_post">
                                    <i class="fa-solid fa-business-time"></i>
                                    <p><%= post.date %></p>                             
                                </div>
                                <% if (userid) { %>
                                    <a href="/admin/edit_post/<%= post._id %>">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                <% } %>                                   
                                
                            </div>
                        </div>

                    </div>
                </a>
            </div>
            
        <% }) %>

    </div>


</div>


